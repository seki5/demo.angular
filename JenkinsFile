pipeline {
    agent { 
        node {
            label 'docker-agent-alpine'
            }
      }
    
    tools {nodejs "node"}

    triggers {
        pollSCM '*/60 * * * *'
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
               sh "npm run test -- nightwatch/test/contain.js"
               sh "npm run test -- nightwatch/test/checkurl.js"
                
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                sh '''
                echo "doing delivery stuff.."
                '''
            }
        }
    }
}